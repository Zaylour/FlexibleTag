<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="95dp"
        android:layout_height="95dp"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:roundedCornerRadius="10dp"
        fresco:progressBarImage="@drawable/loading"
        fresco:progressBarImageScaleType="center"
        fresco:progressBarAutoRotateInterval="2000"

        />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintRight_toRightOf="@id/img"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:textSize="11dp"
        tools:text="60万"
        android:textColor="@color/White"
        />

    <ImageView
        android:layout_width="13dp"
        android:layout_height="13dp"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:layout_constraintRight_toLeftOf="@+id/num"
        android:src="@mipmap/z08"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        fresco:layout_constraintTop_toBottomOf="@+id/img"
        fresco:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="2dp"
        tools:text="英伦情调|深海中的温柔孤岛"
        android:lineSpacingExtra="1dp"
        android:textSize="12dp"
        android:maxLines="2"
        android:ellipsize="end"
        />



</androidx.constraintlayout.widget.ConstraintLayout>