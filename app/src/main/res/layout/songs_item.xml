<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        fresco:layout_constraintLeft_toLeftOf="parent"
        fresco:layout_constraintTop_toTopOf="parent"
        fresco:roundedCornerRadius="10dp"
        fresco:progressBarImage="@drawable/loading"
        fresco:progressBarImageScaleType="centerInside"
        fresco:progressBarAutoRotateInterval="2000"
        />

    <TextView
        android:id="@+id/songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:gravity="left"
        android:ellipsize="end"
        fresco:layout_constraintLeft_toRightOf="@+id/img"
        fresco:layout_constraintTop_toTopOf="@+id/img"
        tools:text="Only HumenOnly HumenOnly HumenOnly HumenOnly Humen" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/index_title1"
        android:textSize="9dp"
        fresco:layout_constraintLeft_toRightOf="@+id/songName"
        fresco:layout_constraintTop_toTopOf="@+id/songName"
        tools:text="-Joans" />

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/index_title1"
        android:textSize="9dp"
        fresco:layout_constraintLeft_toRightOf="@+id/img"
        fresco:layout_constraintTop_toBottomOf="@+id/songName"
        tools:text="另一个人感受" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="205dp"
        android:src="@mipmap/z09"
        fresco:layout_constraintTop_toTopOf="@+id/songName"
        fresco:layout_constraintLeft_toRightOf="@+id/img"
        />


</androidx.constraintlayout.widget.ConstraintLayout>